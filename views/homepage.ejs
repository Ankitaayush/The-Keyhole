    <% include ./partials/messages %>

    <section id="backg-1">
      <header>
        <nav class="navbar">
          <div>
            <img
              src="./image/logo_1.1.png"
              class="logo_img"
              alt="logo"
              width="50px"
              height="75px"
            />
            <h1 class="logo">THE KEYHOLE</h1>
          </div>
          <a href="#" class="toggle-button">
            <span class="bar"></span>
